# =============================================================================
# MEVTaxHook Deployment Configuration
# =============================================================================
# Copy this file to .env.<chain> (e.g., .env.mainnet, .env.sepolia)
# Then run: 
#   source .env.<chain> && forge script script/MEVTaxHook.s.sol --broadcast --verify --retries 50

# RPC URL for the target chain
export RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Deployer private key (without 0x prefix works too)
export PRIVATE_KEY=0x...

# Etherscan API key for contract verification
export ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Uniswap V4 PoolManager address
export POOL_MANAGER=0x000000000004444c5dc75cB8d4A63a4bA6a38b00
